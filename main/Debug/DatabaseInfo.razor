@page "/debug/db"
@using main.Data
@using main.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext DbContext

<h3>Database Debug Info</h3>

<button @onclick="LoadUsers" class="btn btn-primary">Load Users</button>

@if (users.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Role</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Contact Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.ContactNumber</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found in database.</p>
}

@code {
    private List<User> users = new();

    private async Task LoadUsers()
    {
        try
        {
            users = await DbContext.Users.ToListAsync();
            Console.WriteLine($"üìä Loaded {users.Count} users from database");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading users: {ex.Message}");
        }
    }
}

