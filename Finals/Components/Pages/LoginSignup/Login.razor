@page "/"
@page "/login"
@inject NavigationManager Navigation
@layout Finals.Components.LSLayout.LSLayout @* FIXED: Changed from EmptyLayout to the existing LSLayout component *@
@inject Finals.Services.AuthService AuthService

<style>
/* The following CSS block is preserved exactly as provided in the user query.
    Note: For Blazor Server, the body styling should ideally be in a global CSS file, 
    but it is kept here to honor the user's provided code structure.
*/
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background: url('https://learnandsupport.getolympus.com/sites/default/files/styles/hero_large/public/2020-10/amico_-_water_droplets_1.jpg?itok=kJ972xkJ') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .login-container {
        display: flex;
        max-width: 1000px;
        width: 100%;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        overflow: hidden;
        margin: auto;
    }

    .brand-section {
        flex: 1;
        background: linear-gradient(135deg, rgba(6, 57, 112, 0.9), rgba(4, 33, 74, 0.9));
        color: white;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .brand-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('https://learnandsupport.getolympus.com/sites/default/files/styles/hero_large/public/2020-10/amico_-_water_droplets_1.jpg?itok=kJ972xkJ') no-repeat center center;
        background-size: cover;
        opacity: 0.15;
        z-index: 0;
    }

    .brand-content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
    }

    .brand-title {
        font-size: 42px;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 20px;
        letter-spacing: 0.5px;
    }

    .brand-subtitle {
        font-size: 20px;
        opacity: 0.95;
        font-weight: 600;
        letter-spacing: 0.8px;
        color: #a8d8ff;
        margin-bottom: 30px;
    }

    .brand-tagline {
        font-size: 16px;
        opacity: 0.8;
        font-style: italic;
        line-height: 1.5;
        border-left: 3px solid #a8d8ff;
        padding-left: 15px;
        margin-top: 30px;
    }

    .form-section {
        flex: 1;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .form-header {
        margin-bottom: 30px;
    }

    .form-title {
        font-size: 24px;
        font-weight: 700;
        color: #04214a;
        margin-bottom: 5px;
    }

    .form-subtitle {
        color: #666;
        font-size: 14px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
        font-size: 14px;
    }

    .form-input {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    .form-select {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        font-size: 14px;
        transition: border-color 0.3s;
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%23003366'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 0.7rem top 50%;
        background-size: 1rem;
        cursor: pointer;
    }

    .form-input:focus, .form-select:focus {
        outline: none;
        border-color: #063970;
    }

    .forgot-password {
        text-align: right;
        margin-top: -10px;
        margin-bottom: 20px;
    }

    .forgot-password a {
        color: #063970;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
    }

    .forgot-password a:hover {
        text-decoration: underline;
    }

    .login-btn {
        width: 100%;
        padding: 14px;
        background: #063970;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
        margin-top: 10px;
    }

    .login-btn:hover {
        background: #04214a;
    }

    .switch-link {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

    .switch-link a {
        color: #063970;
        text-decoration: none;
        font-weight: 600;
    }

    .switch-link a:hover {
        text-decoration: underline;
    }

    .error-message {
        background-color: #f8d7da;
        color: #721c24;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        text-align: center;
        border: 1px solid #f5c6cb;
    }

    @@media (max-width: 768px) {
        .login-container {
            flex-direction: column;
        }
        
        .brand-section {
            padding: 40px 20px;
            text-align: center;
        }
        
        .form-section {
            padding: 40px 20px;
        }

        .brand-title {
            font-size: 32px;
        }

        .brand-subtitle {
            font-size: 18px;
        }
    }
</style>

<div class="login-container">
    <!-- Left Brand Section -->
    <div class="brand-section">
        <div class="brand-content">
            <div class="brand-title">
                Water Station<br />
                Online Appointment
            </div>
            <div class="brand-subtitle">Pure Water, Pure Life</div>
            <div class="brand-tagline">
                Your trusted partner for clean, refreshing water delivered right to your doorstep
            </div>
        </div>
    </div>

    <!-- Right Form Section -->
    <div class="form-section">
        <div class="form-header">
            <h2 class="form-title">Login</h2>
            <div class="form-subtitle">Access your account</div>
        </div>
        
        @if (!string.IsNullOrEmpty(LoginError))
        {
            <div class="error-message">
                @LoginError
            </div>
        }

        <div class="form-row">
            <div class="form-group">
                <label class="form-label">Login as</label>
                <select class="form-input" @bind="LoginAsAdmin">
                    <option value="@false">Customer</option>
                    <option value="@true">Admin</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Username</label>
            <input class="form-input" type="text" @bind="LoginEmail" placeholder="Enter your username" />
        </div>

        <div class="form-group">
            <label class="form-label">Password</label>
            <input class="form-input" type="password" @bind="LoginPassword" placeholder="Enter your password" />
        </div>

        <div class="forgot-password">
            <a href="#" @onclick="HandleForgotPassword" @onclick:preventDefault>Forgot password?</a>
        </div>
        <button class="login-btn" @onclick="HandleLogin">Login</button>
        <div class="switch-link">
            Don't have an account? <a href="/signup">Create account</a>
        </div>
    </div>
</div>

@code {
    private string LoginEmail { get; set; } = "";
    private string LoginPassword { get; set; } = "";
    private bool LoginAsAdmin { get; set; } = false;
    private string LoginError { get; set; } = "";

    protected override void OnInitialized()
    {
        // If already authenticated in this scoped service, redirect to proper area
        if (AuthService.CurrentUser != null)
        {
            if (AuthService.CurrentUser.IsAdmin)
                Navigation.NavigateTo("/admin", replace: true);
            else
                Navigation.NavigateTo("/customer/home", replace: true); @* FIXED: Corrected redirect path *@
        }
    }

    private async Task HandleLogin()
    {
        LoginError = "";  // Clear any previous error

        // Call the updated AuthService.SignIn method, which now returns User?
        var user = await AuthService.SignIn(LoginEmail.Trim(), LoginPassword, LoginAsAdmin); @* FIXED: Corrected method call and removed AuthenticateAsync *
        
        if (user == null)
        {
            LoginError = "Invalid credentials. Please check your username and password.";
            return;
        }

        // Then check if the user's role matches their login attempt
        if (LoginAsAdmin && !user.IsAdmin)
        {
            LoginError = "This account does not have admin privileges. Please login as a customer.";
            // User was briefly signed in during the check, so we sign them out to prevent future issues
            AuthService.SignOut();
            return;
        }
        else if (!LoginAsAdmin && user.IsAdmin)
        {
            LoginError = "This is an admin account. Please use the admin login option.";
            AuthService.SignOut();
            return;
        }

        // If we get here, everything is valid, redirect based on role
        if (user.IsAdmin)
            Navigation.NavigateTo("/admin", replace: true);
        else
            Navigation.NavigateTo("/customer/home", replace: true); @* FIXED: Corrected redirect path *@
    }

    private void HandleForgotPassword()
    {
        Navigation.NavigateTo("/forgot-password");
    }
}