            @Body
        </div>
    </main>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

@code {
    private string CurrentUri => NavigationManager.Uri.Replace(NavigationManager.BaseUri, "/");

    private bool IsActive(string href)
    {
        // Get the current path without the leading slash for accurate comparison
        var currentPath = CurrentUri.TrimStart('/').ToLowerInvariant();
        var linkPath = href.TrimStart('/').ToLowerInvariant();
        
        // Exact match (e.g., /admin)
        if (currentPath == linkPath)
            return true;
        
        // Handle the base path when on a sub-route (e.g., /admin is active for /admin/order)
        if (linkPath == "admin" && currentPath.StartsWith("admin/"))
            return true;
        
        // Direct prefix match for deeper subpages (e.g., /admin/order matches /admin/order/details)
        return currentPath.StartsWith(linkPath + "/", StringComparison.OrdinalIgnoreCase);
    }

    private void Logout()
    {
        AuthService.SignOut();
        NavigationManager.NavigateTo("/login", replace: true);
    }
}

