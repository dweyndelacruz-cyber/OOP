@namespace Finals.Components.AdminLayout
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager
@inject Finals.Services.AuthService AuthService
@inherits LayoutComponentBase

<div class="dashboard-layout">
    <aside class="sidebar">
        <h2 class="logo">ðŸ’§ Water Station Online Appointment</h2>
        <nav>
            <a href="/admin" class="nav-link @(IsActive("/admin") ? "active" : "")">
                <i class="fas fa-home"></i> Home
            </a>
            <a href="/admin/order" class="nav-link @(IsActive("/admin/order") ? "active" : "")">
                <i class="fas fa-box"></i> Orders
            </a>
            <a href="/admin/order-history" class="nav-link @(IsActive("/admin/order-history") ? "active" : "")">
