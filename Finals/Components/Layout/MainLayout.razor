@namespace Finals.Components.Layout
@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="main-layout-root">
    <header class="app-header">
        <div class="brand">Finals</div>
        <div class="header-actions">
            <button class="logout-btn" @onclick="Logout">Logout</button>
        </div>
    </header>

    <div class="page-body">
        @Body
    </div>

    <footer class="app-footer">
        © Finals
    </footer>
</div>

@code {
    private void Logout()
    {
        Navigation.NavigateTo("/login", replace: true);
    }
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.main-layout-root {
    display: flex;
    flex-direction: column;
    width: 100vw;
    height: 100vh;
    font-family: 'Poppins', sans-serif;
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

.app-header {
    background: linear-gradient(180deg, #063970 0%, #01254e 100%);
    color: white;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    z-index: 10;
}

.brand {
    font-size: 1.5rem;
    font-weight: 600;
    color: #e0f1ff;
    letter-spacing: 0.5px;
}

.header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.logout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    background: rgba(255, 255, 255, 0.1);
    color: #e0f1ff;
    border: none;
    font-weight: 500;
    padding: 0.8rem 1.5rem;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    max-width: 180px;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
}

.logout-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.logout-btn i {
    font-size: 1.1rem;
}

.page-body {
    flex: 1;
    position: relative;
    overflow-y: auto;
    display: flex;
    margin: 0;
    padding: 0;
    width: 100%;
    height: calc(100vh - 64px); /* Adjusted for header height */
    background: white;
}

.app-footer {
    background: #063970;
    color: white;
    text-align: center;
    padding: 1rem 0;
    position: relative;
    z-index: 10;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.app-footer {
    background: #063970;
    color: white;
    text-align: center;
    padding: 1rem 0;
    position: relative;
    z-index: 10;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
}

::-webkit-scrollbar {
    width: 8px;
}
::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.4);
    border-radius: 4px;
}

* {
    box-sizing: border-box;
}
</style>